<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="Pengajuan_Pinjaman.PengajuanPinjamanController" alignment="CENTER" spacing="10" stylesheets="@../style.css">
    <Label text="Formulir Pengajuan Pinjaman" styleClass="label-title"/>
    <GridPane hgap="10" vgap="10">
        <Label text="Nama Lengkap:"/>
        <TextField fx:id="namaLengkapField" GridPane.columnIndex="1" styleClass="text-field"/>
        
        <Label text="Nomor Identitas:" GridPane.rowIndex="1"/>
        <TextField fx:id="nomorIdentitasField" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="text-field"/>

        <Label text="Alamat:" GridPane.rowIndex="2"/>
        <TextField fx:id="alamatField" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="text-field"/>

        <Label text="Nomor Telepon:" GridPane.rowIndex="3"/>
        <TextField fx:id="nomorTeleponField" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="text-field"/>
        
        <Label text="Email:" GridPane.rowIndex="4"/>
        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="4" styleClass="text-field"/>
        
        <Label text="Pendapatan Bulanan:" GridPane.rowIndex="5"/>
        <TextField fx:id="pendapatanBulananField" GridPane.columnIndex="1" GridPane.rowIndex="5" styleClass="text-field"/>
        
        <Label text="Pengeluaran Bulanan:" GridPane.rowIndex="6"/>
        <TextField fx:id="pengeluaranBulananField" GridPane.columnIndex="1" GridPane.rowIndex="6" styleClass="text-field"/>
        
        <Label text="Sumber Penghasilan:" GridPane.rowIndex="7"/>
        <TextField fx:id="sumberPenghasilanField" GridPane.columnIndex="1" GridPane.rowIndex="7" styleClass="text-field"/>
        
        <Label text="Jumlah Pinjaman:" GridPane.rowIndex="8"/>
        <TextField fx:id="jumlahPinjamanField" GridPane.columnIndex="1" GridPane.rowIndex="8" styleClass="text-field"/>
        
        <Label text="Usaha yang Dibangun:" GridPane.rowIndex="9"/>
        <TextField fx:id="usahaYangDibangunField" GridPane.columnIndex="1" GridPane.rowIndex="9" styleClass="text-field"/>
        
        <Label text="Jangka Waktu Pinjaman:" GridPane.rowIndex="10"/>
        <TextField fx:id="jangkaWaktuPinjamanField" GridPane.columnIndex="1" GridPane.rowIndex="10" styleClass="text-field"/>
        
        <Label text="Pekerjaan:" GridPane.rowIndex="11"/>
        <TextField fx:id="pekerjaanField" GridPane.columnIndex="1" GridPane.rowIndex="11" styleClass="text-field"/>
        
        <Label text="Nama Perusahaan:" GridPane.rowIndex="12"/>
        <TextField fx:id="namaPerusahaanField" GridPane.columnIndex="1" GridPane.rowIndex="12" styleClass="text-field"/>
        
        <Label text="Alamat Tempat Kerja:" GridPane.rowIndex="13"/>
        <TextField fx:id="alamatTempatKerjaField" GridPane.columnIndex="1" GridPane.rowIndex="13" styleClass="text-field"/>
        
        <Label text="Nomor Telepon Tempat Kerja:" GridPane.rowIndex="14"/>
        <TextField fx:id="nomorTeleponTempatKerjaField" GridPane.columnIndex="1" GridPane.rowIndex="14" styleClass="text-field"/>
        
        <Label text="Dokumen Pendukung:" GridPane.rowIndex="15"/>
        <TextField fx:id="dokumenPendukungField" GridPane.columnIndex="1" GridPane.rowIndex="15" styleClass="text-field"/>
    </GridPane>
    <Button text="Submit" onAction="#handleSubmit" styleClass="button"/>
    <Button text="Simpan ke XML" onAction="#handleSimpanXML" styleClass="button"/>
    <Button text="Baca dari XML" onAction="#handleBacaXML" styleClass="button"/>
</VBox>
