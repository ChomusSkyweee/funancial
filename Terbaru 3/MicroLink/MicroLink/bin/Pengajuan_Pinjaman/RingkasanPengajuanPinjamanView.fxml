<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="Pengajuan_Pinjaman.RingkasanPengajuanPinjamanController" alignment="CENTER" spacing="10" stylesheets="@../style.css">
    <Label text="Ringkasan Pengajuan Pinjaman" styleClass="label-title"/>
    <GridPane hgap="10" vgap="10">
        <Label text="Nama Lengkap:"/>
        <Label fx:id="namaLengkapLabel" GridPane.columnIndex="1"/>
        
        <Label text="Nomor Identitas:" GridPane.rowIndex="1"/>
        <Label fx:id="nomorIdentitasLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Alamat:" GridPane.rowIndex="2"/>
        <Label fx:id="alamatLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Nomor Telepon:" GridPane.rowIndex="3"/>
        <Label fx:id="nomorTeleponLabel" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        
        <Label text="Email:" GridPane.rowIndex="4"/>
        <Label fx:id="emailLabel" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        
        <Label text="Pendapatan Bulanan:" GridPane.rowIndex="5"/>
        <Label fx:id="pendapatanBulananLabel" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        
        <Label text="Pengeluaran Bulanan:" GridPane.rowIndex="6"/>
        <Label fx:id="pengeluaranBulananLabel" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
        
        <Label text="Sumber Penghasilan:" GridPane.rowIndex="7"/>
        <Label fx:id="sumberPenghasilanLabel" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
        
        <Label text="Jumlah Pinjaman:" GridPane.rowIndex="8"/>
        <Label fx:id="jumlahPinjamanLabel" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
        
        <Label text="Usaha yang Dibangun:" GridPane.rowIndex="9"/>
        <Label fx:id="usahaYangDibangunLabel" GridPane.columnIndex="1" GridPane.rowIndex="9"/>
        
        <Label text="Jangka Waktu Pinjaman:" GridPane.rowIndex="10"/>
        <Label fx:id="jangkaWaktuPinjamanLabel" GridPane.columnIndex="1" GridPane.rowIndex="10"/>
        
        <Label text="Pekerjaan:" GridPane.rowIndex="11"/>
        <Label fx:id="pekerjaanLabel" GridPane.columnIndex="1" GridPane.rowIndex="11"/>
        
        <Label text="Nama Perusahaan:" GridPane.rowIndex="12"/>
        <Label fx:id="namaPerusahaanLabel" GridPane.columnIndex="1" GridPane.rowIndex="12"/>
        
        <Label text="Alamat Tempat Kerja:" GridPane.rowIndex="13"/>
        <Label fx:id="alamatTempatKerjaLabel" GridPane.columnIndex="1" GridPane.rowIndex="13"/>
        
        <Label text="Nomor Telepon Tempat Kerja:" GridPane.rowIndex="14"/>
        <Label fx:id="nomorTeleponTempatKerjaLabel" GridPane.columnIndex="1" GridPane.rowIndex="14"/>
        
        <Label text="Dokumen Pendukung:" GridPane.rowIndex="15"/>
        <Label fx:id="dokumenPendukungLabel" GridPane.columnIndex="1" GridPane.rowIndex="15"/>
    </GridPane>
    <Button text="Kembali" onAction="#handleKembali" styleClass="button"/>
</VBox>
